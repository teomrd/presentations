{
  "name": "presentations",
  "version": "1.0.0",
  "private": false,
  "scripts": {
    "start": "node app.js",
    "clean": "rimraf docs",
    "build": "npm run clean && grunt",
    "ensure-components-dir": "mkdirp public/components",
    "postinstall":
      "npm run ensure-components-dir && ncp node_modules/reveal.js public/components/reveal.js/.",
    "dev":
      "concurrently --kill-others \"npm start\" \"browser-sync start -p http://localhost:5001/ --files views\"",
    "static-preview": "http-server --silent ./docs/",
    "ensure-docs": "path-exists docs && echo \"docs/ exists\" || grunt",
    "test":
      "npm run ensure-docs && concurrently --kill-others \"npm run static-preview\" \"mocha --exit\"",
    "deploy": "git push heroku master && heroku open"
  },
  "dependencies": {
    "body-parser": "1.18.2",
    "cookie-parser": "1.4.3",
    "debug": "3.1.0",
    "dotenv": "^4.0.0",
    "ejs": "2.5.7",
    "express": "4.16.2",
    "http-auth": "3.2.3",
    "mkdirp": "0.5.1",
    "morgan": "1.9.0",
    "ncp": "2.0.0",
    "reveal.js": "3.5.0",
    "serve-favicon": "2.4.5",
    "socket.io": "2.0.4"
  },
  "devDependencies": {
    "browser-sync": "2.18.13",
    "chai": "4.1.2",
    "chai-files": "1.4.0",
    "chai-http": "3.0.0",
    "concurrently": "3.5.0",
    "grunt": "1.0.1",
    "grunt-cli": "1.2.0",
    "grunt-contrib-clean": "1.1.0",
    "grunt-contrib-copy": "1.0.0",
    "grunt-ejs-static": "0.4.3",
    "grunt-rewrite": "1.0.1",
    "grunt-shell": "2.1.0",
    "http-server": "0.10.0",
    "mocha": "4.0.1",
    "path-exists-cli": "1.0.0",
    "rimraf": "2.6.2"
  },
  "engines": {
    "node": ">=4.5",
    "npm": ">=3"
  },
  "description":
    "A simple project to create and manage presentations powered by web based technologies",
  "main": "app.js",
  "directories": {
    "doc": "docs",
    "test": "test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/teomrd/presentations.git"
  },
  "author": "teomrd (https://github.com/teomrd)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/teomrd/presentations/issues"
  },
  "homepage": "https://github.com/teomrd/presentations#readme"
}
